/* pages/answer/answer.wxss */
.swiper-tab{  
  width: 100%;
  text-align: center;  
  line-height: 80rpx;
  display: flex;
  background: #ffffff;
  z-index: 9999;
  box-shadow:0 10rpx 20rpx #eee;

}  
swiper-item{
  overflow-y: auto;
}
.swiper-tab-list{ 
  flex: 1; 
  font-size: 32rpx;  
  display: inline-block; 
  color: #333333;  
}  
.on{ 
  color: #6ea8f7;  
}
.swiperName{
  height: 80rpx;
  width: 115rpx;
  margin: 0 auto;
}
.on .swiperName{
  border-bottom: 5rpx solid #6ea8f7;
}
/* 中间横线 */
.line{
  width: 100%;
  height: 170rpx;
  /* background: #f8f8f8;
  border-bottom:20rpx solid rgba(144,144,144,0.1) */
}
.topBox{
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
}
.fastTitleBox{
  width: 660rpx;
  height: 88rpx;
  padding: 0 53rpx;
  line-height: 88rpx;
  background: #f8f8f8f8;
}
.fastTitle{
  font-size: 28rpx;
  color: #ff7f29;
}
.fastBtn{
  width: 136rpx;
  height: 60rpx;
  background: #6E9FF7;
  color: #ffffff;
  font-size: 28rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 75rpx;
  margin-top: 15rpx;
}
.lsitBox{
  width: 92%;
  margin: auto;
  margin-top: 170rpx;
}
/* 回答列表 */
.swiper-box{ 
  display: block; 
  width: 100%;
  margin: auto;
  /* padding: 20rpx; */
  overflow: auto; 
} 
/*录音列表*/
.board {
  overflow: hidden;
  width: 100%;
  border-bottom: 1rpx solid #e2e2e2;
  padding-bottom: 34rpx;
}
/*列布局*/
.cell{
  display: flex;
  width: 100%;
  margin: 0 auto;
}
.cell-hd{
  margin-left: 10rpx;
  color: #885A38;
}
.cell .cell-bd{
  flex:1;
  width: 100%;
  position: relative;
}
.infoBox{
  max-width: 90%;
  margin-top: 34rpx;
}
.infoBoxL{
  width: 90%;
  margin-top: 34rpx;
}
.infoName{
  display: block;
  /* max-width: 80%; */
  width: 600rpx;
  font-size: 32rpx;
  color: #333333;
  /* text-overflow: ellipsis; 
  white-space:nowrap;
f
  white-space:nowrap;
  overflow:hidden;  */
  padding-left: 8rpx;
}
.infoDate{
  font-size: 24rpx;
  color: #999999;
  margin-top: 13rpx;
}
.infoTime{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #9e9e9e;
  margin-left: 30rpx;
}
.stateBox{
  width: 140rpx;
  height: 60rpx;
  vertical-align:middle;
  line-height: 60rpx;
  text-align: center;
  margin-top: 10rpx;
  font-size: 40rpx;
  transform: scale(0.5);
  border-radius: 20rpx;
  margin-left: -31rpx;
}
.timerBox{
  display: flex;
  align-items: center;
}
/* .state{
  height: 30rpx;
  padding: 0;
  padding-bottom: -4rpx; 
} */
.passed{
  color: white;
  border: 1rpx solid #80D540;
  background: #6FC653;
}
.review{
  color: white;
  border: 1rpx solid #f6a218;
  background: #F78735;
}
.noThrough{
  color: white;
  border: 1rpx solid #f96766;
  background: #F64E5F;
}
.operationBox{
  width: 68rpx;
  height: 120rpx;
}
.play{
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  background: #ffffff;
  color: #80D540;
  margin-top: 50rpx;
}
.progressBox{
  width: 100%;
  height: 30rpx;
  display: flex;
  align-items: center;
  margin-top: 34rpx;
}
.totleTime{
  display: block;
  width: 60rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  color: #a7a7a7;
}
.playTime{
   display: block;
  width: 60rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  color: #6ea8f7;
  margin-left: 10rpx;
}
.smallBox{
  width: 520rpx;
  height: 22rpx;
  margin-top: 14rpx;
  margin-left: 20rpx;
  position: relative;
}
.progress{
  width: 100%;
}
.sliderBtn{
  display: block;
  width: 6rpx;
  height: 22rpx;
  border-radius: 6rpx;
  background: #6ea8f7;
  position: absolute;
  top: -9rpx;
}
slider{
  width: 530rpx;
}

/*缺省页*/
.noClassBox{
  width: 100%;
  padding: 190rpx 0 0;
  margin-top: 150rpx;
}
.noting{
  width: 300rpx;
  height: 200rpx;
  margin: 0 auto;
}
.prompt{
  font-size: 28rpx;
  color: #666666;
  margin-top: 50rpx;
  text-align: center;
} 


/* 加载更多 */
.loadMore{
  width: 100%;
  padding: 20rpx 0;
  height: 80rpx;
  text-align: center;
  background: #f7f7f7;
  position: fixed;
  left: 0;
  bottom: 0;
}
.loadBox{
  width: 150rpx;
  height: 40rpx;
  padding: 20rpx 0;
  margin: 0 auto;
}
.loadPic{
  width: 40rpx;
  height: 40rpx;
}
.loading{
  font-size: 22rpx;
  color: #999999;
  line-height: 40rpx;
}
.goindex{
  width: 382rpx;
  margin-top: 100rpx;
  background: linear-gradient(#6EAFF7, #6E9FF7);
  color: white;
  border-radius:44rpx 44rpx 44rpx 44rpx;
  border: none
}
 .price{
  width: 110rpx;
  height: 40rpx;
  padding: 8rpx;
  border: 1rpx solid #ff3458;
  font-size: 28rpx;
  border-radius:44rpx 44rpx 44rpx 44rpx;
  color: #ff3458;
  text-align: center;
  line-height: 40rpx;
  position: absolute;
  right: 20%;
  top: 22%;
} 
button::after{
  border: none
}

.sliderChange{
  width: 200rpx;
}