.container{
  width: 100%;
  height: 100%;
  flex: 1;
  flex-direction: column;
}
.areaBox{
  padding: 40rpx 0;
}
.inputBox{
  width: 690rpx;
  height: 325rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  margin: 0 auto 40rpx;
}
.input{
  width: 630rpx;
  height: 245rpx;
  padding: 40rpx 30rpx 40rpx;
  font-size: 28rpx;
  color: #333333;
  line-height: 44rpx;
  text-align: justify;
}
.phcolor{
  color: #999999;
}
.btnBox{
  width: 690rpx;
  height: auto;
